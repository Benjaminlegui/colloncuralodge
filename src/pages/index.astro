---
import Layout from "../layouts/Layout.astro";
import HeroCarousel from "../components/HeroCarousel.astro";
import CardsSection from "../components/CardsSection.astro";
import FormSection from "../components/FormSection.astro";
import Parralax from "../components/Parallax/Parralax.astro";
import LeftRight from "../components/LeftRight/LeftRight.astro";
import Background1 from "../../public/parallax/parallax-1.jpg";
import Background2 from "../../public/card-2.jpg";
import Faqs from "../components/Faqs/Faqs.astro";
import GrowingBoxes from "../components/GrowingBoxes/GrowingBoxes.astro";
import carouselImage1 from "../../public/homepage-carousel/carousel-1.jpg";
import carouselImage2 from "../../public/homepage-carousel/carousel-2.jpg";
import carouselImage3 from "../../public/homepage-carousel/carousel-3.jpg";
import carouselImage4 from "../../public/homepage-carousel/carousel-4.jpg";
import carouselMobile1 from "../../public/homepage-carousel/carousel-mobile-1.jpg";
import carouselMobile3 from "../../public/homepage-carousel/carousel-mobile-3.jpg";
import carouselMobile4 from "../../public/homepage-carousel/carousel-mobile-4.jpg";

const aboutUsInfo = {
  title: "About Us",
