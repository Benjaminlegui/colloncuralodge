---
interface Props {
  title: string;
  href: string;
}

import "../styles/global.scss";
import "@fontsource/poppins";
import "@fontsource/roboto";
import Nav from "../components/Nav/Nav.astro";
import GlobalButton from "../components/GlobalButton/GlobalButton.astro";
import Footer from "../components/Footer.astro";
import "../styles/_paraxify.scss";

const { title, href } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon-black.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <title>Patagon Waters</title>
  </head>
  <body>
    <GlobalButton href={href} />
    <Nav />
    <slot />
    <Footer />
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline src="js/paraxify.min.js" defer></script>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
    ></script>

    <script is:inline>
      AOS.init();
    </script>
  </body>

  <style is:global>
    body {
      font-family: "Roboto", sans-serif;
      margin: 0;
      padding: 0;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: "Poppins", serif;
    }
  </style>
</html>
