---
interface Props {
  title: string;
  layout: string;
}
import "../styles/global.scss";
import "@fontsource/poppins";
import "@fontsource/roboto";
import Nav from "../components/Nav/Nav.astro";
import NavSingle from "../components/NavSingle/NavSingle.astro";
import Footer from "../components/Footer.astro";
import "../../public/parallax/_paraxify.scss";

const { title, layout } = Astro.props;
const isTrue = layout === "single";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <title>{title}</title>
  </head>
  <body>
    {!isTrue ? <Nav /> : <NavSingle />}
    <slot />
    <Footer />
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init();
    </script>
    <script is:inline src="../../public/parallax/paraxify.min.js"></script>
    <script>
      const myParaxify = paraxify(".paraxify");
    </script>
  </body>
</html>

<style is:global>
  body {
    font-family: "Roboto", sans-serif;
    margin: 0;
    padding: 0;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Poppins", serif;
  }
</style>
