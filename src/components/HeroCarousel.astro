---
import { getImage } from "astro:assets";
import Heading from "./Heading.astro";
import Background from "../../public/homepage-carousel/carousel-1.jpg";
import Background1 from "../../public/homepage-carousel/carousel-2.jpg";
import Background2 from "../../public/homepage-carousel/carousel-3.jpg";
import Background3 from "../../public/homepage-carousel/carousel-4.jpg";
import Link from "./Link/Link.astro";
import Carousel from "./Carousel/Carousel.astro";

const optimizedBackground = await getImage({ src: Background, format: "webp" });
const optimizedBackground1 = await getImage({
  src: Background1,
  format: "webp",
});
const optimizedBackground2 = await getImage({
  src: Background2,
  format: "webp",
});
const optimizedBackground3 = await getImage({
  src: Background3,
  format: "webp",
});

const backgrounds = [
  optimizedBackground,
  optimizedBackground1,
  optimizedBackground2,
  optimizedBackground3,
];

const { title } = Astro.props;
---

<section>
  <div class="container">
    <div class="background">
      <Carousel cards={backgrounds} />
    </div>
    <div class="overlay"></div>
    <div class:list={["content"]}>
      <Heading text={title} tag={"h1"} class="title" data-aos="fade-up" />
      <Link
        href={`#contact`}
        text={`start you adventure`}
        type={"secondary"}
        data-aos="fade-up"
        data-aos-delay="300"
      />
    </div>
  </div>
</section>

<style lang="scss">
  section {
    min-height: 300px;
    padding: 200px 0 200px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;

    @media (min-width: 1000px) {
      padding: 300px 0 200px;
    }
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-color: rgba(0, 0, 0, 0.4);
  }

  .background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .swiper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: -2;
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 40px;
  }
</style>
