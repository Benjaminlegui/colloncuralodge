---
import Image from "astro/components/Image.astro";
import Background from "../../../public/about_us/about_us.jpg";
import Block from "../Block/Block.astro";
import styles from "./LeftRight.module.scss";

const { type, block, ...restProps } = Astro.props;
---

<section class={`${styles["left-right"]} ${styles[type]}`} {...restProps}>
  <div class={`container-small ${styles.container}`}>
    <div class={styles.right}>
      <div data-aos="fade-left" data-aos-once="true" class={styles.block}>
        <Block {...block} />
      </div>
    </div>
    <div class={styles.left}>
      <div data-aos="fade-right" data-aos-once="true" class={styles.image}>
        <Image src={Background} alt="background" />
      </div>
    </div>
  </div>
</section>
