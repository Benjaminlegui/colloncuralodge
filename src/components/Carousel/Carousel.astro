---
import styles from "./Carousel.module.scss";
---

<div class={styles.carousel}>
  <swiper-container
    speed="1000"
    loop="true"
    autoplay="true"
    autoplay-delay="3000"
    effect="fade"
    draggable="true"
    (swiperslidechange)="slideChange()"
    class={styles.swiper}
  >
      <slot />
  </swiper-container>
</div>
